
@{
    ViewData["Title"] = "Edit";
}




@model Bloggie.Web.Models.ViewModels.EditTagRequest

<div class="bg-secondary py-2 bg-opacity-10">
    <div class="container">
        <h3 style="text-align:center"> Edit Tag</h3>
    </div>
</div>

<div class="container py-5">
    <form method="post" asp-action="Edit" asp-controller="AdminTag" asp-route-id ="@Model.Id" class="form">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input asp-for="Id" class="form-control" id="id" readonly/>
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" id="name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input asp-for="DisplayName" class="form-control" id="displayName" />
        </div>
        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-success">Update</button>
                <button type="submit" class="btn btn-danger ms-2" asp-controller="AdminTag" asp-action="Delete" onclick="return confirm('Are you sure you want to delete this tag?');">Delete</button>
            </div>
        </div>
    </form>
</div>



@model List<Bloggie.Web.Models.Domain.Tag>
@{
    ViewData["Title"] = "List";
}

<div class="bg-secondary py-2 bg-opacity-10">
    <div class="container">
        <h3 style="text-align:center"> Show all Tags</h3>
    </div>
</div>
<div class="container py-5">
    @if(Model != null & Model.Any()){
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.DisplayName</td>
                        <td>
                            <a asp-action="Edit" asp-controller="AdminTag" asp-route-id="@item.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }else{
        <p>No tags found</p>
    }
</div>

